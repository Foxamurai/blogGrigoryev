@{
    ViewData["Title"] = "Ya-blog";
}

@model IEnumerable<blogGrigoryev.ViewModels.Blog.BlogPostItemViewModel>

@foreach (var post in Model)
{
    <div class="card">
        <div class="card-header">
            @post.Title
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@post.Data</p>
                <footer class="blockquote-footer">@post.Author (<cite title="Source Title">@post.Created</cite>)</footer>
            </blockquote>
        </div>
    </div>
}
